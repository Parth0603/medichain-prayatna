{
  "name": "medichain-blockchain",
  "version": "1.0.0",
  "description": "Blockchain setup for MediChain",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js --network amoy",
    "deploy-local": "hardhat run scripts/deploy.js --network localhost",
    "start": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"bgBlue.bold,bgMagenta.bold\" \"cd backend && npm run dev\" \"cd frontend && npm run dev\""
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "concurrently": "^9.2.1",
    "hardhat": "^2.19.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "dotenv": "^17.3.1"
  }
}
